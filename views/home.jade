extend layout

block content

	.landing

		.container

			ul.messages
				each message in messages
					li.messages
						blockquote.quote-message
							p #{message.message}
							if message.country
								small from #{message.userDisplayName} in #{message.country}
							else
								small from #{message.userDisplayName}

		.dotted-container
			h1.headline Share a loving message on this holidays.

			ul.login
				li
					a(href='/auth/facebook').btn.icon-facebook Sign in with

				li
					a(href='/auth/twitter').btn.icon-twitter Sign in with